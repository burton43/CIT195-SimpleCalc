<Window x:Class="WpfApp1.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="HelpWindow" Height="300" Width="300">
    <Grid Background="#FF3CCFCF">
        <Button x:Name="Button_Close" Content="Close" HorizontalAlignment="Center" Height="34" Margin="0,225,0,0" VerticalAlignment="Top" Width="144" Click="Button_Close_Click"/>
        <TextBox HorizontalAlignment="Center" Height="210" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" TextChanged="TextBox_TextChanged" Text="Mortgage: The amount of money owned on the loan.&#xD;&#xA;&#xD;&#xA;Down Payment: The amount of money put down on the loan as collateral.&#xD;&#xA;&#xD;&#xA;APR: The annual rate of interest.&#xD;&#xA;&#xD;&#xA;Years to be paid: The length of the loan payment in years." TextDecorations="{x:Null}" FontFamily="Segoe UI Black"/>

    </Grid>
</Window>
